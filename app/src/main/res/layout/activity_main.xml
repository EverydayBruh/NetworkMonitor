<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_start_monitoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Monitoring"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:id="@+id/btn_stop_monitoring"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Monitoring"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_start_monitoring"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btn_send_handshake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Handshake"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_stop_monitoring"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Idle"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_send_handshake"
        android:layout_marginTop="20dp" />
</RelativeLayout>
